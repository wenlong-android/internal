<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/set_name"
            android:layout_width="120dp"
            android:layout_height="50dp"

            android:gravity="center"
            android:text="清除全部内容" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/set_spec"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="全部设置模板" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/set_num"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="设置黑色模式" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/set_nickName"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="设置拣选模式" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/set_vender"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="设置" />
    </LinearLayout>











    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/set_barCode"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="设置" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/set_unit"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="设置" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/set_model"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="设置" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/set_sn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="设置" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/set_mode"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="设置" />
    </LinearLayout>

</LinearLayout>

</ScrollView>